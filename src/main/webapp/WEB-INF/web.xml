<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee 
         http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <display-name>Job Portal System</display-name>
    
    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
    </welcome-file-list>
    
    <!-- Register Servlet -->
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>com.jobportal.servlet.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>
    
    <!-- Dashboard Servlet -->
    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>com.jobportal.servlet.DashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/DashboardServlet</url-pattern>
    </servlet-mapping>
    
    <!-- Logout Servlet -->
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.jobportal.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/LogoutServlet</url-pattern>
    </servlet-mapping>
    
    <!-- Post Job Servlet -->
    <servlet>
    <servlet-name>PostJobServlet</servlet-name>
    <servlet-class>com.jobportal.servlet.PostJobServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>PostJobServlet</servlet-name>
    <url-pattern>/PostJobServlet</url-pattern>
</servlet-mapping>
    
    
    <!-- View Jobs Servlet -->
    <servlet>
        <servlet-name>ViewJobsServlet</servlet-name>
        <servlet-class>com.jobportal.servlet.ViewJobsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewJobsServlet</servlet-name>
        <url-pattern>/ViewJobsServlet</url-pattern>
    </servlet-mapping>
    
    <!-- Search Jobs Servlet -->
    <servlet>
        <servlet-name>SearchJobsServlet</servlet-name>
        <servlet-class>com.jobportal.servlet.SearchJobsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SearchJobsServlet</servlet-name>
        <url-pattern>/SearchJobsServlet</url-pattern>
    </servlet-mapping>
    
    <!-- Login Servlet -->
<servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.jobportal.servlet.LoginServlet</servlet-class>
</servlet>

<servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/LoginServlet</url-pattern>
</servlet-mapping>

<!-- Update Profile Servlet -->
<servlet>
    <servlet-name>UpdateProfileServlet</servlet-name>
    <servlet-class>com.jobportal.servlet.UpdateProfileServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>UpdateProfileServlet</servlet-name>
    <url-pattern>/UpdateProfileServlet</url-pattern>
</servlet-mapping>

<!-- Apply Job Servlet -->
<servlet>
    <servlet-name>ApplyJobServlet</servlet-name>
    <servlet-class>com.jobportal.servlet.ApplyJobServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>ApplyJobServlet</servlet-name>
    <url-pattern>/ApplyJobServlet</url-pattern>
</servlet-mapping>

<!-- Submit Application Servlet -->
<servlet>
    <servlet-name>SubmitApplicationServlet</servlet-name>
    <servlet-class>com.jobportal.servlet.SubmitApplicationServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>SubmitApplicationServlet</servlet-name>
    <url-pattern>/SubmitApplicationServlet</url-pattern>
</servlet-mapping>

<!-- Job Details Servlet -->
<servlet>
    <servlet-name>JobDetailsServlet</servlet-name>
    <servlet-class>com.jobportal.servlet.JobDetailsServlet</servlet-class>
</servlet>
<servlet-mapping>
    <servlet-name>JobDetailsServlet</servlet-name>
    <url-pattern>/JobDetailsServlet</url-pattern>
</servlet-mapping>
    
</web-app>
